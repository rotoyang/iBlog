<h1 class="text-center mt-4">Log in</h1>
<div class="container text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group row">
      <%= f.label :email, class: "col-2 col-form-label" %><br />
      <div class="col-8">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control shadow rounded mt-2" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password, class: "col-2 col-form-label" %><br />
      <div class="col-8">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control shadow rounded mt-2" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mt-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-primary btn-sm mt-2" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>