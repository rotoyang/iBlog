<% if @post.errors.any? %>
  <h2>Errors from being submited</h2>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @post, local: true) do |f| %>

  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :desc %><br/>
    <%= f.text_area :desc %>
  </p>

  <p>
    <%= f.submit %>
  </p>
  
<% end %>