<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: @post, class: "shadow p-3 mb-3 bg-gray rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label" %><br/>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of Post" %>
          </div>
        </div>

        <div class="form-group row mt-4">
          <%= f.label :desc, class: "col-2 col-form-label" %><br/>
          <div class="col-10">
            <%= f.text_area :desc, rows: 10, class: "form-control shadow rounded", placeholder: "Description of Post" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn col-2 mt-4 btn-primary btn-md" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3 text-center text-primary">
      <%= link_to '[Cancel and return to posts list]', posts_path %>
    </div>
  </div>
</div>